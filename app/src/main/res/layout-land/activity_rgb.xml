<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.nure.hrunko.android.laba1.RGB">

    <RelativeLayout
        android:layout_width="588dp"
        android:layout_height="543dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/greenBar"
            android:layout_alignStart="@+id/greenBar"
            android:layout_marginBottom="-70dp"
            android:layout_marginStart="20dp"
            android:text="Green" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_marginStart="420dp"
            android:layout_marginTop="210dp"
            android:text="Blue" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/redBar"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginBottom="-45dp"
            android:text="Red" />

        <SurfaceView
            android:id="@+id/surface1"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:layout_editor_absoluteX="-5dp"
            tools:layout_editor_absoluteY="0dp" />

        <SeekBar
            android:id="@+id/redBar"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45dp"
            android:max="255"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="100dp" />

        <SeekBar
            android:id="@+id/greenBar"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/redBar"
            android:layout_marginTop="74dp"
            android:max="255" />

        <SeekBar
            android:id="@+id/blueBar"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/greenBar"
            android:layout_marginTop="71dp"
            android:max="255"
            tools:layout_editor_absoluteX="432dp"
            tools:layout_editor_absoluteY="16dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
