<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.nure.hrunko.android.laba1.Edit">
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/btn_pick"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:text="Change" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="179dp"
            android:layout_height="141dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_rowSpan="2"
            android:maxHeight="200dp"
            android:src="@drawable/calc" />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_columnSpan="3"/>

        <EditText
            android:id="@+id/decsr"
            android:layout_width="415dp"
            android:layout_height="137dp"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_columnSpan="3"
            android:layout_rowSpan="5"
            android:inputType="textMultiLine" />
        <RadioGroup
            android:layout_column="0"
            android:layout_row="3"
            android:layout_rowSpan="3">
            <RadioButton
                android:id="@+id/minor_radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="3"/>
            <RadioButton
                android:id="@+id/average_radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="4"/>
            <RadioButton
                android:id="@+id/major_radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="5"/>
        </RadioGroup>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_column="1"
            android:layout_row="3"
            android:src="@drawable/low" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_column="1"
            android:layout_row="4"
            android:src="@drawable/high" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_column="1"
            android:layout_row="5"
            android:src="@drawable/critical" />
        <Button
            android:id="@+id/btn_save"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_columnSpan="2"
            android:text="Save" />
        <Button
            android:id="@+id/btn_del"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="5"
            android:layout_columnSpan="1"
            android:text="Delete" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
